<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Topiccardview"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="6dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/TopicImage"
        android:layout_width="200dp"
        android:background="@drawable/borderwith_black"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/TopicTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:layout_toEndOf="@+id/TopicImage"
        android:gravity="top"
        android:paddingTop="6dp"
        android:paddingStart="6dp"
        android:text="Topic Title"
        android:textColor="@color/Black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TopicDes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-6dp"
        android:text="Topic Description"
        android:visibility="gone" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_double_right_arrows"
        android:tint="@color/Black" />

</RelativeLayout>