<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PageBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/winspire_logo" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Hello World!"
        android:textColor="#0447ff"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/contact"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/contactUs"
            android:text="Contact Us"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/aboutUs"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/abCompany"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="About Company" />

        <Button
            android:id="@+id/abTandC"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Terms and Conditions" />

        <Button
            android:id="@+id/abPPolicy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Privacy Policy" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/reachUs"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/abFacebook"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:drawableStart="@drawable/ic_facebook"
            android:drawableTint="@color/White"
            android:drawingCacheQuality="high"
            android:paddingStart="40dp"
            android:textColor="@color/White"
            android:background="@color/FacebookBlue"
            android:gravity="center_vertical|center"
            android:paddingEnd="40dp"
            android:text="like us at FACEBOOK" />

        <Button
            android:id="@+id/abTwitter"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="40dp"
            android:textColor="@color/White"
            android:background="@color/TwitterBlue"
            android:gravity="center_vertical|center"
            android:paddingEnd="40dp"
            android:drawableStart="@drawable/ic_twitter"
            android:drawableTint="@color/White"
            android:text="follow us at Twitter" />

        <Button
            android:id="@+id/abYoutube"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="40dp"
            android:textColor="@color/White"
            android:background="@color/GooglePlusRed"
            android:gravity="center_vertical|center"
            android:paddingEnd="40dp"
            android:drawableTint="@color/White"
            android:text="subscribe us at Youtube" />

    </LinearLayout>

    <Button
        android:gravity="center"
        android:id="@+id/rateUs"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Rate Us"
        android:textAllCaps="false" />


</LinearLayout>